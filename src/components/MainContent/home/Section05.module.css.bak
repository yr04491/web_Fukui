/* Section05 スタイル - Figmaデザインに完全に一致 */
.section05 {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 60px 20px 40px;
    gap: 30px;
    position: relative;
    width: 100%;
    max-width: 540px;
    margin: 0 auto;
    background: #FFFFFF;
    border-radius: 0;
    overflow: visible;
}

/* タイトル周りのスタイル - H1 00 */
.titleWrapper {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 0;
    gap: 15px;
    width: 100%;
    max-width: 500px;
}

.logoContainer {
    display: flex;
    flex-direction: row;
    align-items: baseline;
    /* centerからbaselineに変更し、下端揃えの基準を設定 */
    justify-content: center;
    padding: 0;
    width: 101.46px;
    height: 33.92px;
    flex: none;
    order: 0;
    flex-grow: 0;
    margin-bottom: 5px;
    /* タイトルとの間隔を調整 */
}

.roadText {
    font-family: 'DNP ShueiGoKinStd', var(--font-primary);
    font-size: 16.5px;
    font-weight: bold;
    color: var(--color-black);
    margin-right: 2px;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    padding-bottom: 0;
    /* 微調整のため0にリセット */
    line-height: 1;
    position: relative;
    top: 5px;
    /* 他のセクションに合わせて下に移動 */
}

.logoChar {
    width: auto;
    height: 30px;
    max-height: 30px;
    margin: 0 1px;
    object-fit: contain;
    display: inline-block;
    vertical-align: bottom;
    position: relative;
    top: 0;
    /* 基準となるため0にリセット */
}

.mainTitle {
    width: 100%;
    max-width: 200px;
    font-family: 'DNP ShueiGoKinStd', var(--font-primary);
    font-style: normal;
    font-weight: 600;
    font-size: 25px;
    line-height: 35px;
    display: flex;
    align-items: center;
    text-align: center;
    justify-content: center;
    color: #000000;
    margin-top: 0px;
    margin-bottom: 0px;
}

.dotline {
    width: 100%;
    max-width: 364.5px;
    height: 10px;
    background-size: contain;
    background-repeat: repeat-x;
    margin: 0;
}

/* 紹介セクションスタイル - Frame 2 */
.introSection {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 24px 20px;
    gap: 30px;
    width: 100%;
    max-width: 500px;
    background: #FFFFFF;
    border-radius: 10px;
    margin-bottom: 15px;
}

.introTitle {
    width: 192px;
    height: 12px;
    font-family: 'DNP ShueiGoKinStd', var(--font-primary);
    font-style: normal;
    font-weight: 600;
    font-size: 16px;
    line-height: 32px;
    text-align: center;
    color: #000000;
    margin: 0;
    flex: none;
    order: 0;
    flex-grow: 0;
}

.introText {
    width: 100%;
    max-width: 460px;
    font-family: 'DNP ShueiGoKinStd', var(--font-primary);
    font-style: normal;
    font-weight: 500;
    font-size: 14px;
    line-height: 28px;
    letter-spacing: 0.1em;
    color: #000000;
    margin: 0;
}

/* 体験談セクションスタイル - 相対位置に変更 */
.experienceSection {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px 20px 40px;
    gap: 15px;
    width: 100%;
    max-width: 500px;
    background: #FFFFFF;
    border-radius: 10px;
    margin-bottom: 20px;
    overflow: visible;
}

.expertSection {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
    gap: 15px;
    width: 100%;
    max-width: 500px;
    background: #FFFFFF;
    border-radius: 10px;
    margin-bottom: 20px;
}

.sectionHeader {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding: 2px 0px;
    gap: 8px;
    width: 100%;
    max-width: 500px;
    height: 39.31px;
}

.sectionTag {
    width: 132px;
    height: 9px;
    font-family: 'DNP ShueiGoKinStd', var(--font-primary);
    font-style: normal;
    font-weight: 600;
    font-size: 12px;
    line-height: 15px;
    color: #000000;
    flex: none;
    order: 0;
    flex-grow: 0;
}

.sectionTitle {
    width: 256px;
    height: 12px;
    font-family: 'DNP ShueiGoKinStd', var(--font-primary);
    font-style: normal;
    font-weight: 600;
    font-size: 16px;
    line-height: 32px;
    color: #000000;
    margin: 0;
    flex: none;
    order: 1;
    flex-grow: 0;
}

/* カードエリア - 相対位置に変更 */
.tweetCardArea {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    padding: 0;
    gap: 20px;
    width: 100%;
    overflow-x: auto;
    overflow-y: visible;
    flex-wrap: nowrap;
    margin-bottom: 20px;
    scrollbar-width: none;
    /* Firefox */
    -ms-overflow-style: none;
    /* IE and Edge */
}

/* Chrome, Safari, Opera用のスクロールバーを非表示 */
.tweetCardArea::-webkit-scrollbar {
    display: none;
}

/* プロジェクトボタン - 相対位置に変更 */
.projectButton {
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    padding: 8px 16px;
    min-width: 320px;
    max-width: fit-content;
    height: 40px;
    background: #FDF9D5;
    border: 1px solid #000000;
    border-radius: 5px;
    cursor: pointer;
    margin-top: 0;
    margin-bottom: 20px;
    white-space: nowrap;
}

.buttonIconContainer {
    width: 24px;
    height: 24px;
    position: relative;
    margin-right: 8px;
}

.playArrowIcon {
    position: absolute;
    left: 8px;
    top: 6px;
    width: 12px;
    height: 12px;
    fill: #000000;
}

.projectButton span {
    font-family: 'DNP ShueiGoKinStd', var(--font-primary);
    font-style: normal;
    font-weight: 600;
    font-size: 12px;
    line-height: 15px;
    color: #000000;
    white-space: nowrap;
    display: inline-block;
}

.projectButton:hover {
    background: rgba(0, 0, 0, 0.05);
}

/* 不要なクラスを削除 */
/* .expertButton, .experienceButton クラスは削除 */

/* レスポンシブ対応 */
@media (max-width: 768px) {
    .section05 {
        padding: 40px 16px 30px;
        width: 100%;
        max-width: 100%;
    }

    .titleWrapper {
        width: 100%;
        max-width: 100%;
    }

    .mainTitle {
        font-size: 22px;
        line-height: 28px;
        width: 100%;
    }

    .introText {
        font-size: 13px;
        line-height: 24px;
        width: 100%;
    }

    .introSection {
        width: 100%;
        max-width: 100%;
    }

    .experienceSection {
        width: 100%;
        max-width: 100%;
    }

    .sectionHeader {
        width: 100%;
        padding-left: 0;
    }

    .tweetCardArea {
        width: 100%;
    }

    .projectButton {
        width: 280px;
        margin: 20px auto;
    }
}

@media (max-width: 480px) {
    .mainTitle {
        font-size: 20px;
        line-height: 26px;
    }

    .sectionTitle {
        font-size: 15px;
        width: 100%;
    }

    .sectionTag {
        font-size: 11px;
        width: 100%;
    }

    .projectButton {
        width: 240px;
    }

    .projectButton span {
        font-size: 11px;
    }

    .tweetCardArea {
        width: 100%;
    }
}